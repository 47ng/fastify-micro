{
  "name": "fastify-micro",
  "version": "0.4.1",
  "description": "Opinionated Node.js microservices framework built on fastify",
  "main": "dist/index.js",
  "license": "MIT",
  "author": {
    "name": "Fran√ßois Best",
    "email": "contact@francoisbest.com",
    "url": "https://francoisbest.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/47ng/fastify-micro"
  },
  "keywords": [
    "microservice-framework",
    "fastify"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "dev": "nodemon -e ts,.env -w .env -w . -x 'run-s build:ts test'",
    "build:clean": "rm -rf ./dist",
    "build:ts": "tsc",
    "build": "run-s build:clean build:ts",
    "ci": "run-s test build"
  },
  "dependencies": {
    "@47ng/check-env": "^2.0.0",
    "@sentry/node": "^5.15.5",
    "fastify": "^2.13.1",
    "fastify-autoload": "^1.2.2",
    "fastify-graceful-shutdown": "^2.0.1",
    "fastify-plugin": "^1.6.1",
    "fastify-sensible": "^2.1.1",
    "nanoid": "^3.1.3",
    "redact-env": "^0.2.0",
    "sonic-boom": "^1.0.1",
    "under-pressure": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.2",
    "@types/pino": "^6.0.0",
    "@types/sonic-boom": "^0.7.0",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn ci"
    }
  }
}
